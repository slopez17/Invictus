<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Invictus" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_500</item>
        <item name="colorPrimaryDark">@color/cyan_700</item>
        <item name="colorAccent">@color/cyan_200</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray1</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Invictus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Invictus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Invictus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>