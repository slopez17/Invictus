<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.navigation.HomeFragment"
        android:background="@drawable/bg_degrade_lightblue"
        android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_general_margin"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/activity_vertical_margin"
                android:layout_margin="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fallsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_text_level0_size"
                        android:textStyle="bold"
                        android:fontFamily="@font/amaranth" />

                    <ImageView
                        android:id="@+id/fallsImageView"
                        android:layout_width="@dimen/activity_icon_level0_size"
                        android:layout_height="@dimen/activity_icon_level0_size"
                        android:src="@drawable/ic_falls_black_24dp"
                        android:contentDescription="@string/falls" />

                    <TextView
                        android:id="@+id/fallsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/falls"
                        android:textAlignment="center"
                        android:textSize="@dimen/activity_text_level2_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stepsJumpsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:textSize="@dimen/activity_text_level0_size"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/stepsJumpsImageView"
                        android:layout_width="@dimen/activity_icon_level0_size"
                        android:layout_height="@dimen/activity_icon_level0_size"
                        android:src="@drawable/ic_steps_black_24dp"
                        android:contentDescription="@string/steps" />

                    <TextView
                        android:id="@+id/stepsJumpsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/steps"
                        android:textAlignment="center"
                        android:textSize="@dimen/activity_text_level2_size"  />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/activity_vertical_margin"
                android:layout_margin="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/caloriesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_text_level0_size"
                        android:textStyle="bold"
                        android:fontFamily="@font/amaranth"/>

                    <ImageView
                        android:id="@+id/caloriesImageView"
                        android:layout_width="@dimen/activity_icon_level0_size"
                        android:layout_height="@dimen/activity_icon_level0_size"
                        android:src="@drawable/ic_calories_black_24dp"
                        android:contentDescription="@string/calories" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/caloriesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calories"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size" />

                        <TextView
                            android:id="@+id/caloriesUndText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_text_level0_size"
                        android:textStyle="bold"
                        android:fontFamily="@font/amaranth"/>

                    <ImageView
                        android:id="@+id/distanceImageView"
                        android:layout_width="@dimen/activity_icon_level0_size"
                        android:layout_height="@dimen/activity_icon_level0_size"
                        android:src="@drawable/ic_distance_black_24dp"
                        android:contentDescription="@string/distance" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/distanceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/distance"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size" />

                        <TextView
                            android:id="@+id/distanceUndText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size" />

                    </LinearLayout>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/activity_vertical_margin"
                android:layout_margin="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/speedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_text_level0_size"
                        android:textStyle="bold"
                        android:fontFamily="@font/amaranth"/>

                    <ImageView
                        android:id="@+id/speedImageView"
                        android:layout_width="@dimen/activity_icon_level0_size"
                        android:layout_height="@dimen/activity_icon_level0_size"
                        android:src="@drawable/ic_speed_black_24dp"
                        android:contentDescription="@string/speed" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/speedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/speed"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size" />

                        <TextView
                            android:id="@+id/speedUndText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/elapsedTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/activity_text_level0_size"
                        android:textStyle="bold"
                        android:fontFamily="@font/amaranth"/>

                    <ImageView
                        android:id="@+id/timeImageView"
                        android:layout_width="@dimen/activity_icon_level0_size"
                        android:layout_height="@dimen/activity_icon_level0_size"
                        android:src="@drawable/ic_time_black_24dp"
                        android:contentDescription="@string/elapsed_time" />

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/elapsed_time"
                        android:textAlignment="center"
                        android:textSize="@dimen/activity_text_level2_size" />

                </LinearLayout>

            </TableRow>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/monitorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>

