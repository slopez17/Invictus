<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.historical.HistoricalFragment"
    android:background="@drawable/bg_degrade_lightorange">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:layout_marginHorizontal="@dimen/activity_general_margin"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_general_margin"
                android:text="@string/select"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="@dimen/activity_text_level2_size"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:columnCount="2"
                android:layout_margin="@dimen/activity_vertical_margin">

                <androidx.cardview.widget.CardView
                    android:id="@+id/weightCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/activity_general_margin"
                    app:cardCornerRadius="@dimen/activity_general_margin"
                    android:elevation="@dimen/activity_general_margin"
                    android:backgroundTint="@color/orange">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="@dimen/activity_layout_height"
                            android:layout_height="@dimen/activity_layout_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_general_margin"
                            android:contentDescription="@string/weight"
                            android:src="@drawable/ic_weight_black_24dp"
                            android:scaleType="fitCenter"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/weight"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/walkCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/activity_general_margin"
                    app:cardCornerRadius="@dimen/activity_general_margin"
                    android:elevation="@dimen/activity_general_margin"
                    android:backgroundTint="@color/orange">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="@dimen/activity_layout_height"
                            android:layout_height="@dimen/activity_layout_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_general_margin"
                            android:contentDescription="@string/walk"
                            android:src="@drawable/ic_walk_black_24dp"
                            android:scaleType="fitCenter"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/walk"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/jogCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/activity_general_margin"
                    app:cardCornerRadius="@dimen/activity_general_margin"
                    android:elevation="@dimen/activity_general_margin"
                    android:backgroundTint="@color/orange">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="@dimen/activity_layout_height"
                            android:layout_height="@dimen/activity_layout_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_general_margin"
                            android:contentDescription="@string/jog"
                            android:src="@drawable/ic_jog_black_24dp"
                            android:scaleType="fitCenter"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/jog"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ropeSkippingCardView"
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/activity_general_margin"
                    app:cardCornerRadius="@dimen/activity_general_margin"
                    android:elevation="@dimen/activity_general_margin"
                    android:backgroundTint="@color/orange">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="@dimen/activity_layout_height"
                            android:layout_height="@dimen/activity_layout_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_general_margin"
                            android:contentDescription="@string/rope_skipping"
                            android:src="@drawable/ic_skiping_rope_black_24dp"
                            android:scaleType="fitCenter"
                            app:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/rope_skipping"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/climbCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/activity_general_margin"
                    app:cardCornerRadius="@dimen/activity_general_margin"
                    android:elevation="@dimen/activity_general_margin"
                    android:backgroundTint="@color/orange">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="@dimen/activity_layout_height"
                            android:layout_height="@dimen/activity_layout_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_general_margin"
                            android:contentDescription="@string/climb"
                            android:src="@drawable/ic_climb_black_24dp"
                            android:scaleType="fitCenter"
                            app:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/climb"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/runCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/activity_general_margin"
                    app:cardCornerRadius="@dimen/activity_general_margin"
                    android:elevation="@dimen/activity_general_margin"
                    android:backgroundTint="@color/orange">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="@dimen/activity_layout_height"
                            android:layout_height="@dimen/activity_layout_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_general_margin"
                            android:contentDescription="@string/run"
                            android:src="@drawable/ic_run_black_24dp"
                            android:scaleType="fitCenter"
                            app:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/run"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bikeCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/activity_general_margin"
                    app:cardCornerRadius="@dimen/activity_general_margin"
                    android:elevation="@dimen/activity_general_margin"
                    android:backgroundTint="@color/orange">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_vertical_margin">

                        <ImageView
                            android:layout_width="@dimen/activity_layout_height"
                            android:layout_height="@dimen/activity_layout_height"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_general_margin"
                            android:contentDescription="@string/bike"
                            android:src="@drawable/ic_bike_black_24dp"
                            android:scaleType="fitCenter"
                            app:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/bike"
                            android:textAlignment="center"
                            android:textSize="@dimen/activity_text_level2_size"
                            android:textColor="@color/white"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>